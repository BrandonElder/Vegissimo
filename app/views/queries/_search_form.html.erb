<div class="row">
  <div class="small-8 columns">
    <%= form_tag(search_path, :method=>'post', class:'search-form') do %>
    <%= hidden_field_tag('old_id', params[:search_id]) %>
    <%= hidden_field_tag('search_id', create_search_id) %>
    <div class="row text-centered">
      <div class="small-12 columns filters" >
        <i class="fa fa-filter chev-filter"><span class="filter-text">filter results</span></i>
      </div>
      <!-- Filter Box Begin -->
      <div id="searchFilters">
        <div class="small-12 columns">
          <div class='description'>Dietary Choice</div>
        </div>
        <!-- Radio Inputs Begin -->
        <div class="small-12 columns radio-inputs">
          <%= radio_button_tag(:health,
                                "vegan",
                                 @health == 'vegetarian' ? false : true) %>
          <%= label :health_vegan, 'vegan', class: 'radio-label' %>
          <%= radio_button_tag(:health,
                                 "vegetarian",
                                @health == 'vegetarian' ? true : false) %>
          <%= label :health_vegetarian, 'vegetarian', class: 'radio-label' %>
        </div>
        <!-- Radio Inputs End -->
        <!-- Max Calories Begin -->
        <div class="small-12 columns">
          <div class='description'>Calories Per Serving</div>
        </div>
        
        <div class="row">
          <div class="column">
            <div class="input-group">
              <div class="input-group-button">
                <button type="button"
                        class="cal-btn"
                        data-quantity="minus"
                        data-field="max_cal">
                  <i class="fa fa-minus" aria-hidden="true"></i>
                </button>
              </div>
              <%= number_field_tag "max_cal",
                                   params[:max_cal] ? params[:max_cal] : 500,
                                   min:1,
                                   required: true,
                                   class: 'input-group-field text-input' %>
              <div class="input-group-button">
                <button type="button"
                        class="cal-btn"
                        data-quantity="plus"
                        data-field="max_cal">
                  <i class="fa fa-plus" aria-hidden="true"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
        <!-- Max Calories End -->
      </div>
      <!-- Filter Box End -->
      <!-- Search Bar Begin -->
      <div class="search-box-field">
        <div class="row">
          <div class="small-8 columns">
            <%= text_field_tag "q",
              @term,
              maxlength: 50,
              placeholder: 'search',
              required: true,
              class: 'text-input' %>
          </div>
          <div class="small-4 columns">
            <%= button_tag(type:'submit', class:'submit-btn float-right') do %>
              <i class="fa fa-search"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!-- Search Bar End -->
    <% end %>
  </div>
</div>