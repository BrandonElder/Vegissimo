<div class="button-row-container">
  <div class="row btn-row">
    <% if current_user %>
      <div id="change-favorites-<%=recipe.e_id %>">
        <% if Recipe.exists?(edamam_id: recipe.e_id, dislike: false) %>
          <%= link_to dashboard_path(search_id: params[:search_id]),
                      class: 'round-btn favorite-btn',
                      data: { button_id: recipe.e_id },
                      method: :get do %>
            <i class="fa fa-heart"></i>
          <% end %>
        <% elsif Recipe.exists?(edamam_id: recipe.e_id, dislike: true) %>
          <%= link_to dashboard_path(search_id: params[:search_id]),
                      class: 'round-btn dislike-btn',
                      data: { button_id: recipe.e_id },
                      method: :get do %>
            <i class="fa fa-thumbs-down"></i>
          <% end %>
        <% else %>
          <%= link_to recipes_path(user_id: current_user.id,
                                        id: recipe.e_id,
                                        recipe_name: recipe.label,
                                        dislike: false,
                                        image: recipe.image ),
                                        class: 'round-btn clean-btn',
                                        data: { button_id: recipe.e_id },
                                        method: :post do %>
            <i class="fa fa-heart-o"></i>
          <% end %>
          <%= link_to recipes_path(user_id: current_user.id,
                                        id: recipe.e_id,
                                        recipe_name: recipe.label,
                                        dislike: true,
                                        image: recipe.image ),
                                        class: 'round-btn clean-btn',
                                        data: { button_id: recipe.e_id },
                                        method: :post do %>
            <i class="fa fa-thumbs-o-down"></i>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <%= button_to 'Sign In to Save', new_user_session_path, class: 'button' %>
    <% end %>
  </div>
</div>